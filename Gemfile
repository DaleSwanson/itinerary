source 'https://rubygems.org'

gem 'rails', '3.2.13'
gem 'jquery-rails'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :development, :test do
  #gem 'sqlite3', '1.3.7'
  gem 'pg'
  gem 'annotate'
  gem 'taps'
end

group :production do
  gem 'pg'
  gem 'rails_12factor'
end
